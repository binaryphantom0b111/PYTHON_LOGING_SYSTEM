import getpass
attempt = 3
def password_verification():
  correct_username = 'agent'
  username = input("Enter username: ") .lower()
  correct_password = 'zero'
  password = getpass.getpass("Enter password: ") .lower()
  if correct_username == username and correct_password == password:
    print(f" welcome {username}..")
    return True, username
  else:
    return False, None
while attempt > 0:
  success, username =  password_verification()
  if success:
    print("Access granted. ")
    break
  else:
    attempt -= 1
    print(f"Incorrect password, you have {attempt} attempts left..")
else:
  print("Credentials could not be verified..")
  exit()
    
while True:
  command = input("How can I assist you: ")

  if command == 'file': 
    print("Opening file...")
    content = input("Type your information..")
    with open ("password_username.txt", "w") as file:
      file.write(content)
      
    with open ("password_username.txt", "r") as file:
      txt = file.read()
      print(txt)
      
    
  elif command == 'exit': 
    print(f"Exiting, farewell {username}..")
    break
  
