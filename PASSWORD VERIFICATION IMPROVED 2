
attempt = 3
def password_verification():
  username = 'yess'
  correct_username = input(" Enter username: ")

  password = 'oni'
  correct_password = input("Enter password: ")

  if correct_username == username and correct_password == password:
    return True, username
  else:
    return False, None
while attempt > 0:
  
  success, user = password_verification()
  
  if success:
    print(f"Access granted, welcome {user}")
    break
    
  else:
    attempt -= 1
    print(f"Incorrect credentials, you have {attempt} attempts remaining. ")
else:
  print("Credentials could not be verified.. ")
  exit()

while True:
  command = input("How can I assist you: ")
  if command == 'open':
    print("Opening files...")
    
    content = input("Enter information: ")
    with open("Secret_Identity.txt", "w") as file:
      file.write(content)
      
  elif command =='read':
    print("File contaiment: ")
    with open("Secret_Identity.txt", "r") as file:
      txt = file.read()

      print(txt)
  elif command == 'exit':
    print(f"Exiting program, farewell {user}")
    break

  elif command == 'help':
    print("""
Available commands:
  open   - Create  a file called Secret_Identity.txt
  read   - view a file called Secret_Identity.txt
  exit   - Exit the program
  help   - Show this help menu
  
""")
  else:
    print("Unknown command..")

  
  

  
    
